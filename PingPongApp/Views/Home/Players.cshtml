@model List<PingPongApp.Models.PlayerInfo>
@{
    ViewBag.Title = "Players";
}

<div class="row mb-4">
    <div class="col">
        <h2>Players</h2>
    </div>
</div>

<div class="row mb-4">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.PlayerName</th>
                    <td>@item.PlayerAge</td>
                    <td><button class="btn btn-outline-success my-2 my-sm-0" type="button">@Html.ActionLink("Details", "PlayerInfo", "Home", new { PlayerID = item.PlayerId },null)</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
